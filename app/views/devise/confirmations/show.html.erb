<div class='row'>
  <div class='col-md-6'>
    <h3>Please enter your password</h3>
    <%= form_for(resource, :as => resource_name, :url => confirm_with_password_path(resource_name), :html => { :method => :put, :class => 'form' }) do |f| %>
      <%= resource_error_messages!(resource) %>

      <div class='form-group'>        
        <%= f.hidden_field :confirmation_token, :value => resource.confirmation_token %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, :autofocus => true, :class => 'form-control', placeholder: 'Password used during sign-up.' %>
      </div>

      <div class='form-group'>
        <%= recaptcha_tags %>
      </div>
      
      <%= f.submit "Send", :class => 'btn btn-lg btn-primary' %> <br/><br/>
      <%#= link_to 'Need an Account? Sign-up Here', new_registration_path(resource_name) %> <br/>
      <%= link_to 'Forgot your password?', new_password_path(resource_name) %> <br/>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
